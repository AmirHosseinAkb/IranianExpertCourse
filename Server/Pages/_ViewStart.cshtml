@{
    var currentCulture =
                System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    switch (currentCulture)
    {
        case "fa":
            {
                Layout = "Layouts/Rtl/_Layout";
                break;
            }
        case "en":
            {
                Layout = "Layouts/Ltr/_Layout";
                break;
            }
    }
}
